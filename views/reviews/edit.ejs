<% layout("/layouts/bolierplate.ejs") %>

<div class="row mt-3">
  <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-12">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-dark text-white text-center py-3">
        <h2 class="mb-0">Edit Your Review</h2>
      </div>
      <div class="card-body p-4">
        <form
          method="POST"
          action="/Listings/<%= listing._id %>/reviews/<%= review._id %>?_method=PUT"
          class="needs-validation"
          novalidate
        >
          <div class="mb-4">
            <label for="rating" class="form-label fw-bold">Rating</label>
            <input
              type="number"
              name="review[rating]"
              id="rating"
              value="<%= review.rating %>"
              class="form-control form-control-lg border-primary"
              min="1"
              max="5"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid rating (1-5)
            </div>
          </div>

          <div class="mb-4">
            <label for="comment" class="form-label fw-bold">Review</label>
            <textarea
              id="comment"
              name="review[comment]"
              rows="5"
              class="form-control form-control-lg border-primary"
              required
              style="resize: vertical"
            >
<%= review.comment %></textarea
            >
            <div class="invalid-feedback">Please enter a valid review</div>
          </div>

          <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-dark btn-lg edit-btn">
              <i class="bi bi-pencil-square me-2"></i> Edit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
