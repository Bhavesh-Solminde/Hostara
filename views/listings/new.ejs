<% layout("/layouts/bolierplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h1>Add a place :</h1>
    <form method="post" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="category" class="form-label">Category*</label>
        <select name="category" id="category" class="form-select" required>
          <option value="">Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic Cities">Iconic Cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Arctic</option>
        </select>
        <div class="invalid-feedback">Please select a category</div>
      </div>

      <div class="mb-3">
        <label for="title" class="form-label">Title*</label>
        <input
          type="text"
          name="title"
          id="title"
          placeholder="Enter title...."
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter valid title</div>
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Enter description*</label>
        <textarea
          id="description"
          name="description"
          placeholder="Enter a detailed description here..."
          rows="5"
          cols="40"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter valid description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Enter image/url:</label>
        <input
          type="text"
          name="image"
          id="image"
          placeholder="Enter url...."
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="md-3 col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label">Enter Price*</label>
            <input
              type="number"
              name="price"
              id="price"
              placeholder="Enter price...."
              class="form-control"
              required
            />
            <div class="invalid-feedback">Invalid price</div>
          </div>

          <div class="valid-feedback">Fair Price!</div>
        </div>

        <div class="md-3 col-md-8">
          <div class="mb-3">
            <label for="country" class="form-label">Enter Country*</label>
            <input
              type="text"
              name="country"
              id="country"
              placeholder="Enter country...."
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid Country</div>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Enter Location*</label>
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Enter location...."
          class="form-control"
          required
        />
        <div class="invalid-feedback">Your location is invalid</div>
        <div class="valid-feedback">Valid location</div>
      </div>

      <button type="submit" class="btn btn-dark offset-5 mb-3 add-btn mt-3">
        Add
      </button>
    </form>
  </div>
</div>
